<div class="container">
  <h1>Users</h1>

  <%= link_to new_user_path do %>
    <button type="button" class="btn btn-default">
      <span class="fa fa-plus" aria-hidden="true"></span> User</button>
  <% end %>

  <table class="table">
    <tr>
      <th>Username/Email</th>
      <th>Last logged in at</th>
      <th>Failed Login Attempts</th>
      <th>Locked?</th>
      <th>Admin?</th>
      <th>Edit</th>
      <th>Remove</th>
    </tr>

    <% @users.each do |u| %>
      <tr>
        <td><%= u.email %></td>
        <td><%= u.last_sign_in_at %></td>
        <td><%= u.failed_attempts %></td>
        <td>
          Status:
          <% if u.locked == 1 %>
            <span class="fa fa-lock" aria-hidden="true"></span>
          <% else %>
            <span class="fa fa-unlock" aria-hidden="true"></span>
          <% end %>
        </td>
        <td><%= u.admin %></td>
        <td>
          <%= link_to edit_user_path(u) do%>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to user_path(u), method: :delete, data: {confirm: "Are you sure?"}  do%>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
